<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingLeft="@dimen/welcome_activity_lateral_margin"
    android:paddingRight="@dimen/welcome_activity_lateral_margin"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_gravity="center"
        android:gravity="center"
        android:background="@color/translucent_white"
        android:paddingLeft="@dimen/welcome_activity_lateral_padding"
        android:paddingRight="@dimen/welcome_activity_lateral_padding">

        <TextView
            android:id="@+id/register_form_username_title"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="@string/register_form_username_title" />

        <EditText
            android:id="@+id/register_form_username_field"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:inputType="text" />

        <TextView
            android:id="@+id/register_form_email_title"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="@string/register_form_email_title" />

        <EditText
            android:id="@+id/register_form_email_field"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:inputType="textEmailAddress" />

        <TextView
            android:id="@+id/register_form_password_title"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="@string/register_form_password_title" />

        <EditText
            android:id="@+id/register_form_password_field"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:inputType="textPassword" />

        <TextView
            android:id="@+id/register_form_password_again_title"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="@string/register_form_password_again_title" />

        <EditText
            android:id="@+id/register_form_password_again_field"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:inputType="textPassword" />

        <TextView
            android:id="@+id/register_form_firstname_title"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="@string/register_form_firstname_title" />

        <EditText
            android:id="@+id/register_form_firstname_field"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:inputType="text" />

        <TextView
            android:id="@+id/register_form_lastname_title"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="@string/register_form_lastname_title" />

        <EditText
            android:id="@+id/register_form_lastname_field"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:inputType="text" />

        <TextView
            android:id="@+id/register_form_phoneno_title"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="@string/register_form_phoneno_title" />

        <EditText
            android:id="@+id/register_form_phoneno_field"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:inputType="phone" />
        
        <TextView
            android:id="@+id/register_form_jobtitle_title"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="@string/register_form_jobtitle_title" />

        <EditText
            android:id="@+id/register_form_jobtitle_field"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:inputType="text" />
        
        <TextView
            android:id="@+id/register_form_organisation_title"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="@string/register_form_organisation_title" />

        <EditText
            android:id="@+id/register_form_organisation_field"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:inputType="text" />
        <Button
            android:id="@+id/register_btn"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/padding_large"
            android:layout_marginLeft="@dimen/welcome_activity_lateral_padding"
            android:layout_marginRight="@dimen/welcome_activity_lateral_padding"
            android:text="@string/register_btn_text" />
    </LinearLayout>

</ScrollView>