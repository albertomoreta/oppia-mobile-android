<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical"
    android:paddingLeft="@dimen/welcome_activity_lateral_margin"
    android:paddingRight="@dimen/welcome_activity_lateral_margin" >

    <TextView
        android:id="@+id/about_versionno"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:gravity="center"
        android:textSize="15sp"
        android:textStyle="bold"
        android:background="@android:color/white"/>
    
    <WebView
        android:id="@+id/about_webview"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:paddingLeft="@dimen/welcome_activity_lateral_padding"
        android:paddingRight="@dimen/welcome_activity_lateral_padding">
    </WebView>

</LinearLayout>