<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingLeft="@dimen/welcome_activity_lateral_margin"
    android:paddingRight="@dimen/welcome_activity_lateral_margin"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_gravity="center"
        android:gravity="center"
        android:background="@color/translucent_white"
        android:paddingLeft="@dimen/welcome_activity_lateral_padding"
        android:paddingRight="@dimen/welcome_activity_lateral_padding">

        <TextView
            android:id="@+id/reset_username_title"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:text="@string/reset_username_title" />

        <EditText
            android:id="@+id/reset_username_field"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:inputType="textEmailAddress"
            android:padding="5dp" />

        <Button
            android:id="@+id/reset_btn"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/welcome_activity_lateral_padding"
            android:layout_marginRight="@dimen/welcome_activity_lateral_padding"
            android:text="@string/title_btn_reset" />

    </LinearLayout>

</ScrollView>